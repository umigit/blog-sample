.container
  .row
    .col-lg-8.mx-auto
      .card.my-3
        .card-body
          %h2 New Article
          = form_for @article do |f|
            = f.label :title
            = f.text_field :title, class: "form-control mb-3", value: @article.title
            = f.label :text
            = f.text_area :text, class: "form-control mb-3", rows: 10, value: @article.text
            = f.submit "Update", class: "btn btn-primary btn-block"
