.article
  .card.border-primary.mb-3
    .card-body
      %h4.article__title.card-title= article.title
      %h6.lead 投稿者: #{article.user.name}
      %hr
      %p 投稿日: #{article.created_at.strftime("%Y年 %m月 %d日")}
      %hr
      %p.article__text.card-text= article.text
      = link_to "詳細", article_path(article), class: "card-link"
      - if user_signed_in? && current_user.id == article.user_id
        = link_to "編集", edit_article_path(article), class: "card-link"
        = link_to "削除", "/articles/#{article.id}", method: :delete, class: "card-link"

