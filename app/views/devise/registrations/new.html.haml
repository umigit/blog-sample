.container
  .card.mt-5.mb-2
    .card-body.devise-form
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :name
          %br/
          = f.text_field :name, autofocus: true, class: "form-control mb-3"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autocomplete: "email", class: "form-control mb-3"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "form-control mb-3"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3"
        .actions
          = f.submit "Sign up", class: "btn btn-primary btn-block"
  = render "devise/shared/links"
